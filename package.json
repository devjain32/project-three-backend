{
  "name": "mern",
  "version": "1.0.0",
  "description": "This project was bootstrapped with [Create React App](https://github.com/facebook/create-react-app).",
  "main": "server.js",
  "scripts": {
    "start": "if-env NODE_ENV=production && npm run start:prod || npm run start:dev",
    "start:prod": "node server.js",
    "start:dev": "concurrently \"nodemon --ignore 'client/*'\" \"npm run client\"",
    "client": "cd client && npm run start",
    "seed": "node scripts/plantsDB.js && node scripts/usersDB.js",
    "install": "cd client && npm install",
    "build": "cd client && npm run build",
    "heroku-postbuild": "npm run build"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^4.1.0",
    "nodemon": "^1.18.7"
  },
  "dependencies": {
    "axios": "^0.18.0",
    "body-parser": "^1.19.0",
    "express": "^4.17.1",
    "if-env": "^1.0.4",
    "mongoose": "^5.6.7",
    "passport": "^0.4.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/devjain32/project-three-backend.git"
  },
  "bugs": {
    "url": "https://github.com/devjain32/project-three-backend/issues"
  },
  "homepage": "https://github.com/devjain32/project-three-backend#readme"
}
